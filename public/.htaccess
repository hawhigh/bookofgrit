<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # Explicitly allow destroy-asset.php
  RewriteRule ^destroy-asset\.php$ - [L]

  # Allow access to PHP files directly
  RewriteCond %{REQUEST_FILENAME} -f
  RewriteRule \.php$ - [L]

  # Allow access to real files (images, css, js)
  RewriteCond %{REQUEST_FILENAME} -f
  RewriteCond %{REQUEST_FILENAME} !index.html
  RewriteRule . - [L]

  # Route everything else to index.html (SPA)
  RewriteRule . /index.html [L]
</IfModule>
