rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Users can only read/write their own data
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Admin bypass (PiA69d9PK7WzdnKRJIrwgV8hCSr1)
      allow read, write: if request.auth != null && request.auth.uid == 'PiA69d9PK7WzdnKRJIrwgV8hCSr1';
    }
    match /chapters/{docId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == 'PiA69d9PK7WzdnKRJIrwgV8hCSr1';
    }
    match /drills/{docId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == 'PiA69d9PK7WzdnKRJIrwgV8hCSr1';
    }
    match /subscriptions/{docId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == 'PiA69d9PK7WzdnKRJIrwgV8hCSr1';
    }
    // Default deny for everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
